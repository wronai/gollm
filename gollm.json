{
  "version": "0.2.0",
  "validation_rules": {
    "max_function_lines": 50,
    "max_file_lines": 300,
    "max_cyclomatic_complexity": 10,
    "max_function_params": 5,
    "max_line_length": 88,
    "forbid_print_statements": true,
    "forbid_global_variables": true,
    "require_docstrings": true,
    "require_type_hints": false,
    "naming_convention": "snake_case"
  },
  "project_management": {
    "todo_integration": true,
    "auto_create_tasks": true,
    "todo_file": "TODO.md",
    "changelog_integration": true,
    "auto_update_changelog": true,
    "changelog_file": "CHANGELOG.md"
  },
  "llm_integration": {
    "enabled": true,
    "api_provider": "${OLLAMA_API_BASE:ollama}",
    "default_provider": "ollama",
    "fallback_order": ["ollama", "openai", "anthropic"],
    "timeout": ${DEFAULT_TIMEOUT:30},
    "max_retries": ${MAX_RETRIES:3},
    "log_level": "${LOG_LEVEL:INFO}",
    "log_file": "${LOG_FILE:gollm_debug.log}",
    "cache_enabled": ${CACHE_ENABLED:true},
    "cache_ttl": ${CACHE_TTL:3600},
    "providers": {
      "ollama": {
        "enabled": true,
        "priority": 1,
        "base_url": "${OLLAMA_API_BASE:http://localhost:11434}",
        "model": "${OLLAMA_MODEL:deepseek-coder:1.3b}",
        "api_type": "${OLLAMA_API_TYPE:chat}",
        "temperature": ${OLLAMA_TEMPERATURE:0.1},
        "max_tokens": ${OLLAMA_MAX_TOKENS:4000},
        "timeout": ${OLLAMA_TIMEOUT:180},
        "auto_fix_attempts": ${AUTO_FIX_ATTEMPTS:2},
        "validate_code": ${VALIDATE_CODE:true},
        "max_iterations": ${MAX_ITERATIONS:3}
      },
      "openai": {
        "enabled": false,
        "priority": 2,
        "api_key": "${OPENAI_API_KEY:}",
        "model": "${OPENAI_MODEL:gpt-4}",
        "temperature": ${OPENAI_TEMPERATURE:0.2},
        "max_tokens": ${OPENAI_MAX_TOKENS:2000},
        "timeout": ${OPENAI_TIMEOUT:30},
        "auto_fix_attempts": ${AUTO_FIX_ATTEMPTS:2},
        "validate_code": ${VALIDATE_CODE:true},
        "max_iterations": ${MAX_ITERATIONS:3}
      },
      "anthropic": {
        "enabled": false,
        "priority": 3,
        "api_key": "${ANTHROPIC_API_KEY:}",
        "model": "${ANTHROPIC_MODEL:claude-3-opus-20240229}",
        "temperature": ${ANTHROPIC_TEMPERATURE:0.2},
        "max_tokens": ${ANTHROPIC_MAX_TOKENS:4000},
        "timeout": ${ANTHROPIC_TIMEOUT:45},
        "auto_fix_attempts": ${AUTO_FIX_ATTEMPTS:2},
        "validate_code": ${VALIDATE_CODE:true},
        "max_iterations": ${MAX_ITERATIONS:3}
      }
    }
  },
  "project_root": "."
}
