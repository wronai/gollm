{
  "version": "0.2.0",
  "validation_rules": {
    "max_function_lines": 50,
    "max_file_lines": 300,
    "max_cyclomatic_complexity": 10,
    "max_function_params": 5,
    "max_line_length": 88,
    "forbid_print_statements": true,
    "forbid_global_variables": true,
    "require_docstrings": true,
    "require_type_hints": false,
    "naming_convention": "snake_case"
  },
  "project_management": {
    "todo_integration": true,
    "auto_create_tasks": true,
    "todo_file": "TODO.md",
    "changelog_integration": true,
    "auto_update_changelog": true,
    "changelog_file": "CHANGELOG.md"
  },
  "llm_integration": {
    "enabled": true,
    "api_provider": "ollama",
    "default_provider": "ollama",
    "fallback_order": [
      "ollama"
    ],
    "timeout": 30,
    "max_retries": 6,
    "log_level": "DEBUG",
    "debug_logging": true,
    "log_file": "gollm_debug.log",
    "cache_enabled": true,
    "cache_ttl": 3600,
    "providers": {
      "ollama": {
        "enabled": true,
        "priority": 1,
        "base_url": "http://192.168.188.212:11434",
        "model": "deepseek-r1:8b",
        "api_type": "chat",
        "temperature": 0.1,
        "max_tokens": 100,
        "timeout": 60,
        "top_p": 0.9,
        "top_k": 40,
        "repeat_penalty": 1.1,
        "stop": [
          "```",
          "\n\n",
          "\n#",
          "\n\n\n"
        ],
        "auto_fix_attempts": 1,
        "validate_code": true,
        "max_iterations": 3
      }
    }
  },
  "project_root": "."
}