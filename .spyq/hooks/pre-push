#!/bin/sh
# SPYQ Pre-push Hook  
# Final validation before pushing to remote

echo "ğŸš€ SPYQ: Final validation before push..."

# Run full project validation
python -m spyq validate-project --strict

if [ $? -ne 0 ]; then
    echo "âŒ Project validation failed"
    echo "ğŸ”§ Fix all issues before pushing:"
    echo "   spyq status           # Show current issues"
    echo "   spyq fix --auto       # Auto-fix what's possible"
    echo "   spyq validate-project # Re-validate"
    exit 1
fi

# Check quality score threshold
QUALITY_SCORE=$(python -m spyq status --format json | jq -r '.quality_score')

if [ "$QUALITY_SCORE" -lt 80 ]; then
    echo "âš ï¸ Quality score below threshold (${QUALITY_SCORE}/100)"
    echo "ğŸ“ˆ Improve code quality before pushing"
    exit 1
fi

echo "âœ… All validations passed - ready to push!"
echo "ğŸ“Š Quality Score: ${QUALITY_SCORE}/100"
exit 0