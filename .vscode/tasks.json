{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "goLLM: Validate Project",
      "type": "shell",
      "command": "gollm",
      "args": [
        "validate-project"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "goLLM: Fix All Issues",
      "type": "shell",
      "command": "gollm",
      "args": [
        "fix",
        "--auto"
      ],
      "group": "build"
    },
    {
      "label": "goLLM: Show Status",
      "type": "shell",
      "command": "gollm",
      "args": [
        "status"
      ],
      "group": "build"
    }
  ]
}