#!/bin/sh
# goLLM Pre-commit Hook
# Validates staged files before commit

echo "üîç goLLM: Validating staged files..."

# Get staged Python files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.py$')

if [ -z "$STAGED_FILES" ]; then
    echo "‚úÖ No Python files to validate"
    exit 0
fi

# Run goLLM validation on staged files
VALIDATION_FAILED=0

for file in $STAGED_FILES; do
    echo "Validating: $file"
    
    # Run goLLM validation
    python -m gollm validate "$file" --quiet
    
    if [ $? -ne 0 ]; then
        VALIDATION_FAILED=1
        echo "‚ùå Validation failed for: $file"
    fi
done

if [ $VALIDATION_FAILED -eq 1 ]; then
    echo ""
    echo "‚ùå goLLM validation failed for some files"
    echo "üí° Fix issues with: gollm fix --auto"
    echo "üìä Check status with: gollm status"
    echo "üîß Manual fixes may be required for complex violations"
    exit 1
fi

echo "‚úÖ All staged files passed goLLM validation"
exit 0
